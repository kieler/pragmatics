<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.formats.graphFormats">
      <handler
            class="de.cau.cs.kieler.kiml.formats.svg.SvgHandler"
            description="Scalable Vector Graphics (for export only)"
            extensions="svg"
            id="org.w3.svg"
            name="SVG">
      </handler>
   </extension>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutOption
            default="1.0"
            id="de.cau.cs.kieler.svg.scale"
            name="SVG Rendering Scale"
            type="float">
      </layoutOption>
      <layoutOption
            default="false"
            id="de.cau.cs.kieler.svg.css"
            name="Use CSS in SVG Output"
            type="boolean">
      </layoutOption>
   </extension>

</plugin>
