         </dynamic>
      </menuContribution -->
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <dynamic
               class="de.cau.cs.kieler.ksbase.ui.menus.KSBasEContributionItem"
               id="de.cau.cs.kieler.ksbase.ui.dynamic.popup">
         </dynamic>
         <menu
               id="de.cau.cs.kieler.ksbase.templates"
               label="Add Template">
            <dynamic
                  class="de.cau.cs.kieler.ksbase.ui.menus.KSBasEContributionItem"
                  id="de.cau.cs.kieler.ksbase.ui.dynamic.templates">
            </dynamic>
         </menu>
      </menuContribution>
   </extension>

