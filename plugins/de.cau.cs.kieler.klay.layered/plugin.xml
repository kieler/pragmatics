<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutAlgorithm
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.klay.layered.LayeredLayoutProvider"
            description="Layer-based algorithm of the KIELER Layouters project. Arranges as many edges as possible into one direction by placing nodes into subsequent layers. This implementation supports different routing styles (straight, orthogonal, splines); if orthogonal routing is selected, arbitrary port constraints are respected, thus enabling the layout of block diagrams such as actor-oriented models or circuit schematics. Furthermore, full layout of compound graphs with cross-hierarchy edges is supported when the respective option is activated on the top level."
            id="de.cau.cs.kieler.klay.layered"
            name="KLay Layered"
            preview="images/layered.png"
            type="de.cau.cs.kieler.type.layered">
         <supportedDiagram
               priority="15"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <supportedDiagram
               priority="15"
               type="de.cau.cs.kieler.layout.diagrams.dataFlow">
         </supportedDiagram>
         <supportedFeature
               feature="SELF_LOOPS"
               priority="-2">
         </supportedFeature>
         <supportedFeature
               feature="MULTI_EDGES">
         </supportedFeature>
         <supportedFeature
               feature="EDGE_LABELS"
               priority="-5">
         </supportedFeature>
         <supportedFeature
               feature="PORTS"
               priority="8">
         </supportedFeature>
         <supportedFeature
               feature="COMPOUND">
         </supportedFeature>
         <supportedFeature
               feature="CLUSTERS">
         </supportedFeature>
         <knownOption
               default="20"
               option="de.cau.cs.kieler.spacing">
         </knownOption>
         <knownOption
               default="10"
               option="de.cau.cs.kieler.portSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.noLayout">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.edgeSpacingFactor">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.unnecessaryBendpoints">
         </knownOption>
         <knownOption
               default="12"
               option="de.cau.cs.kieler.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.priority">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.nodeLayering">
         </knownOption>
         <knownOption
               default="ORTHOGONAL"
               option="de.cau.cs.kieler.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portConstraints">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portSide">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.offset">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.debugMode">
         </knownOption>
         <knownOption
               default="1"
               option="de.cau.cs.kieler.randomSeed">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.thoroughness">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.layerConstraint">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.alignment">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layoutHierarchy">
         </knownOption>
         <knownOption
               default="true"
               option="de.cau.cs.kieler.separateConnComp">
         </knownOption>
         <knownOption
               default="1.6"
               option="de.cau.cs.kieler.aspectRatio">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.sizeConstraint">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.sizeOptions">
         </knownOption>
         <knownOption
               default="RIGHT"
               option="de.cau.cs.kieler.direction">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.nodeLabelPlacement">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.cycleBreaking">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.crossMin">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.mergeEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.mergeHierarchyEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.interactiveReferencePoint">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.nodePlace">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.fixedAlignment">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.edgeLabelSideSelection">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portLabelPlacement">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.feedBackEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.inLayerSpacingFactor">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.wideNodesOnMultipleLayers">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.linearSegmentsDeflectionDampening">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.splines.selfLoopPlacement">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.contentAlignment">
         </knownOption>
         <knownOption
               default="JUSTIFIED"
               option="de.cau.cs.kieler.portAlignment">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portAlignment.north">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portAlignment.south">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portAlignment.west">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portAlignment.east">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.nodeplace.compactionStrategy">
         </knownOption>
      </layoutAlgorithm>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="Whether wide nodes should be distributed to several layers."
            id="de.cau.cs.kieler.klay.layered.distributeNodes"
            name="Distribute Nodes (Deprecated)"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.properties.WideNodesStrategy"
            default="OFF"
            description="Strategy to distribute wide nodes over multiple layers."
            id="de.cau.cs.kieler.klay.layered.wideNodesOnMultipleLayers"
            name="Wide Nodes on Multiple Layers"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p1cycles.CycleBreakingStrategy"
            default="GREEDY"
            description="Strategy for cycle breaking. Cycle breaking looks for cycles in the graph and determines which edges to reverse to break the cycles. Reversed edges will end up pointing to the opposite direction of regular edges (that is, reversed edges will point left if edges usually point right)."
            id="de.cau.cs.kieler.klay.layered.cycleBreaking"
            name="Cycle Breaking"
            type="enum"
            variance="0">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p2layers.LayeringStrategy"
            default="NETWORK_SIMPLEX"
            description="Strategy for node layering."
            id="de.cau.cs.kieler.klay.layered.nodeLayering"
            name="Node Layering"
            type="enum"
            variance="0">
      </layoutOption>
      <layoutOption
      		appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p3order.CrossingMinimizationStrategy"
            default="LAYER_SWEEP"
            description="Strategy for crossing minimization."
            id="de.cau.cs.kieler.klay.layered.crossMin"
            name="Crossing Minimization"
            type="enum"
            variance="0">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="7"
            description="How much effort should be spent to produce a nice layout."
            id="de.cau.cs.kieler.klay.layered.thoroughness"
            lowerBound="1"
            name="Thoroughness"
            type="int"
            upperBound="1000"
            variance="4.0">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="nodes"
            class="de.cau.cs.kieler.klay.layered.properties.LayerConstraint"
            default="NONE"
            description="Determines a constraint on the placement of the node regarding the layering."
            id="de.cau.cs.kieler.klay.layered.layerConstraint"
            name="Layer Constraint"
            type="enum">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="0.5"
            description="Factor by which the object spacing is multiplied to arrive at the minimal spacing between edges."
            id="de.cau.cs.kieler.klay.layered.edgeSpacingFactor"
            lowerBound="0.01"
            name="Edge Spacing Factor"
            type="float"
            upperBound="100"
            variance="0.2">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="Edges that have no ports are merged so they touch the connected nodes at the same points."
            id="de.cau.cs.kieler.klay.layered.mergeEdges"
            name="Merge Edges"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="Adds bend points even if an edge does not change direction."
            id="de.cau.cs.kieler.klay.layered.unnecessaryBendpoints"
            name="Add Unnecessary Bendpoints"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="true"
            description="If hierarchical layout is active, hierarchy-crossing edges use as few hierarchical ports as possible."
            id="de.cau.cs.kieler.klay.layered.mergeHierarchyEdges"
            name="Merge Hierarchy-crossing Edges"
            type="boolean">
         <dependency
               option="de.cau.cs.kieler.layoutHierarchy"
               value="true">
         </dependency>
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.properties.InteractiveReferencePoint"
            default="CENTER"
            description="Determines which point of a node is considered by interactive layout phases."
            id="de.cau.cs.kieler.klay.layered.interactiveReferencePoint"
            name="Interactive Reference Point"
            type="enum">
         <dependency
               option="de.cau.cs.kieler.klay.layered.cycleBreaking"
               value="INTERACTIVE">
         </dependency>
         <dependency
               option="de.cau.cs.kieler.klay.layered.crossMin"
               value="INTERACTIVE">
         </dependency>
      </layoutOption>
      <layoutOption
            advanced="false"
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p4nodes.NodePlacementStrategy"
            default="BRANDES_KOEPF"
            description="Strategy for Node Placement"
            id="de.cau.cs.kieler.klay.layered.nodePlace"
            name="Node Placement"
            type="enum">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.properties.FixedAlignment"
            default="NONE"
            description="Tells the BK node placer to use a certain alignment instead of taking the optimal result."
            id="de.cau.cs.kieler.klay.layered.fixedAlignment"
            name="Fixed Alignment"
            type="enum">
         <dependency
               option="de.cau.cs.kieler.klay.layered.nodePlace"
               value="BRANDES_KOEPF">
         </dependency>
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            id="de.cau.cs.kieler.klay.layered.linearSegmentsDeflectionDampening"
            name="Linear Segments Deflection Dampening"
            description="Dampens the movement of nodes to keep the diagram from getting too large."
            default="0.3"
            lowerBound="0.0"
            upperBound="1.0"
            type="float">
         <dependency
               option="de.cau.cs.kieler.klay.layered.nodePlace"
               value="LINEAR_SEGMENTS">
         </dependency>
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.properties.EdgeLabelSideSelection"
            default="SMART"
            description="Method to decide on edge label sides."
            id="de.cau.cs.kieler.klay.layered.edgeLabelSideSelection"
            name="Edge Label Side Selection"
            type="enum">
         <dependency
               option="de.cau.cs.kieler.edgeRouting"
               value="ORTHOGONAL">
         </dependency>
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="Whether feedback edges should be highlighted by routing around the nodes."
            id="de.cau.cs.kieler.klay.layered.feedBackEdges"
            name="Feedback Edges"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="1"
            description="Factor by which the usual spacing is multiplied to determine the in-layer spacing between objects."
            id="de.cau.cs.kieler.klay.layered.inLayerSpacingFactor"
            lowerBound="0.01"
            name="In-layer Spacing Factor"
            type="float"
            upperBound="100"
            variance="0.2">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="Whether long sausages should be folded up nice and tight."
            id="de.cau.cs.kieler.klay.layered.sausageFolding"
            name="Sausage Folding"
            type="boolean">
         <dependency
               option="de.cau.cs.kieler.klay.layered.nodeLayering"
               value="LONGEST_PATH">
         </dependency>
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.properties.SelfLoopPlacement"
            default="NORTH_STACKED"
            id="de.cau.cs.kieler.klay.layered.splines.selfLoopPlacement"
            name="Spline Self-Loop Placement"
            type="enum">
         <dependency
               option="de.cau.cs.kieler.edgeRouting"
               value="SPLINES">
         </dependency>
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.properties.ContentAlignment"
            description="Specifies how the content of compound nodes is to be aligned, e.g. top-left."
            id="de.cau.cs.kieler.klay.layered.contentAlignment"
            name="Content Alignment"
            type="enumset">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p4nodes.bk.ICompactor$CompactionStrategy"
            description="Specifies the compaction strategy when using the Brandes and Koepf node placer."
            id="de.cau.cs.kieler.klay.layered.nodeplace.compactionStrategy"
            name="Compaction Strategy"
            type="enum">
         <dependency
               option="de.cau.cs.kieler.klay.layered.nodePlace"
               value="BRANDES_KOEPF">
         </dependency>
      </layoutOption>
   </extension>
</plugin>
